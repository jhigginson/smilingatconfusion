<h2><%= @tab.title %></h2>
<h3><%= @tab.artist.name %></h3>
<span id='submitter'>Last update by <%= @tab.user.name %></span>
<p>Album: <%= @tab.album.name %></p>
<p><%= @tab.tuning.display %></p>
<p><%= @tab.notes %></p>
<span class="tab_body"><%= @tab.body %></span>
<br/>
<br/>
<%= simple_form_for [@tab, @comment] do |f| %>
  <%= f.input :comment %>
  <%= f.button :submit, "Add Comment" %>
<% end %>

<div class="comments">
  <h4>Comments</h4>
  <ul>
  <% @comments.each do |c| %>
    <li>
      <span class="comment_header"><%= c.user.name if c.user %> on <%= l c.created_at if c.created_at %> </span>
      <%= c.comment %>
    </li>
  <% end %>
  </ul>
</div>
