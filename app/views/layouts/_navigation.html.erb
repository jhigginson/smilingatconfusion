<%= link_to "Smiling at Confusion", root_path, :class => 'brand' %>
<ul class="nav pull-left">
  <li <% if controller.controller_name == "tabs" && controller.action_name == "index" %>
    class="active" <% end %>>
    <%= link_to('Tabs', tabs_path) %>
  </li>
</ul>
<ul class="nav pull-right">
  <% if current_user %>
    <% if current_user.admin? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Admin
          <b class="caret"></b>
        </a>
        <ul class ="dropdown-menu">
          <li>
            <%= link_to "Roles", admin_roles_path %>
          </li>
        </ul>
    <% end %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <img src="<%= current_user.avatar %>" class="img-rounded resize"/>
      <%= current_user.name %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Sign out", signout_path %>
        </li>
      </ul>
    </li>
  <% else %>
    <li>
      <%= link_to "Sign in with Twitter", "/auth/twitter" %>
    </li>
  <% end %>
</ul>
